@model MyBudget.Web.AspNet.Models.BudgetLinesPagedViewModel

@{
    ViewBag.Title = "Lines";
}

<h2>Lines</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = Model.BudgetId })
    @if (Model.PrevLinkVisible())
    {
        @Html.ActionLink("Prev", MVC.Lines.Page(Model.BudgetId, Model.From +"", Model.To +"", Model.PageIndex - 1))
    }
    @if (Model.NextLinkVisible())
    {
        @Html.ActionLink("Next", MVC.Lines.Page(Model.BudgetId, Model.From + "", Model.To +"", Model.PageIndex + 1))
    }
</p>
<table class="table">
    <tr>
        <th>
            Date
        </th>
        <th>
            Category
        </th>
        <th>
            Description
        </th>
        <th>
            Amount
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Lines)
    {
        <tr>
            <td>
                @item.Date.ToString("d")
            </td>
            <td>
                @item.Category
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Amount
            </td>
            <td>
                @Html.ActionLink("Edit", MVC.Lines.Actions.Edit(Model.BudgetId, item.Id)) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
