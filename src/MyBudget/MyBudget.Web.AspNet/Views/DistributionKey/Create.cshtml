@model MyBudget.Web.AspNet.Controllers.DistributionKeyViewModel
@{
    ViewBag.Title = "Create";
}

<h2>New Distribution Key</h2>


@using (Html.BeginForm(MVC.DistributionKey.Create(), FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@Model.BudgetName</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label class="control-label col-md-2" for="Name">Name</label>
            <div class="col-md-10">
                <input name="Name" class="text-box single-line" id="Name" type="text" value="@Model.Name">
                <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="Name"></span>
            </div>
        </div>

        @*<div class="form-group">
            <label class="control-label col-md-2" for="Name">Description</label>
