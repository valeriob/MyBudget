                <input name="Description" class="text-box single-line" id="Description" type="text" value="@Model.Description">
                <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="Description"></span>
            </div>
        </div>*@
        <input hidden id="ReturnUrl" name="ReturnUrl" value="@Model.ReturnUrl" />
        <input hidden id="BudgetId" name="BudgetId" value="@Model.BudgetId" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

